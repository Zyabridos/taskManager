doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    title= views.users.edit.title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
  body
    header
      h1= views.users.edit.title
    main
      form(action=`/users/${user.id}/edit`, method="POST")
        input(type="hidden", name="_method", value="PATCH")

        div.form-group
          label(for="firstName")= views.users.edit.firstName
          input#firstName.form-control(type="text", name="data[firstName]", value=user.firstName, required)

        div.form-group
          label(for="lastName")= views.users.edit.lastName
          input#lastName.form-control(type="text", name="data[lastName]", value=user.lastName, required)

        div.form-group
          label(for="email")= views.users.edit.email
          input#email.form-control(type="email", name="data[email]", value=user.email, required)

        div.form-group
          label(for="password")= views.users.edit.password
          input#password.form-control(type="password", name="data[password]", placeholder=views.users.edit.passwordPlaceholder)

        div.form-group
          button.btn.btn-primary(type="submit")= views.users.edit.submit

    footer
      p
        | Все права защищены © 2025
