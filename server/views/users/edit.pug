extends ../layouts/application.pug

block header
  h1= t('views.users.edit.title')

block content
  +formFor()(action=`/users/${user.id}` method='post')
    +floatingFormInput(user, 'name', errors, t('views.users.edit.name'))(type="text")
    input(name="_method" type="hidden" value="patch")
    +submit(user)(value=t('views.users.edit.submit'))