doctype html
html
  head
    title= views.users.new.title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/assets/styles/common.css")

  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href="/")= views.users.navBar.taskManager
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link.active(href="/users")= views.users.navBar.users
            li.nav-item
              a.nav-link(href="/session/new")= views.users.navBar.signIn
            li.nav-item
              a.nav-link(href="/users/new")= views.users.navBar.createAccount

    .container.mt-5
      h1.text-center= views.users.new.title

      if messages && messages.error
        ul
          each error in messages.error
            li.text-danger= error
            
      form(method="post" action="/users")
        .mb-3
          label(for="data_firstName")= views.users.new.firstName
          input#data_firstName.form-control(type="text" name="data[firstName]" required placeholder=views.users.new.firstNamePlaceholder)

        .mb-3
          label(for="data_lastName")= views.users.new.lastName
          input#data_lastName.form-control(type="text" name="data[lastName]" required placeholder=views.users.new.lastNamePlaceholder)

        .mb-3
          label(for="data_email")= views.users.new.email
          input#data_email.form-control(type="email" name="data[email]" required placeholder=views.users.new.emailPlaceholder)

        .mb-3
          label(for="data_password")= views.users.new.password
          input#data_password.form-control(type="password" name="data[password]" autocomplete="data[password]" required placeholder=views.users.new.passwordPlaceholder)

        button.btn.btn-primary(type="submit")= views.users.new.submit
    include ../partials/footer.pug