doctype html
html
  head
    title Flash сообщения
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1 Flash сообщения

      //- Вывод flash-сообщений
      each messages, type in flashMessages || {}
        each message in messages
          div.alert(class=`alert-${type}`)= message

      //- Форма для добавления flash-сообщений
      form(action="/add-flash" method="POST")
        button.btn.btn-primary(type="submit") Добавить Flash сообщения
