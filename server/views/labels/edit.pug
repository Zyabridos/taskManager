extends ../layouts/application.pug
include ../mixins/labelForm.pug

block header
  h1= t('views.labels.edit.title')

block content
  if label
    +labelForm(`/labels/${label.id}`, "post", t('views.labels.edit.submit'), label, errors)
      input(type="hidden" name="_method" value="PATCH")
  else
    p.text-danger= t('flash.labels.edit.notFound')
