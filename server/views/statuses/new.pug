doctype html
html
  head
    title="Создать статус"
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/assets/styles/common.css")

  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href="/")="Менеджер задач"
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link.active(href="/users")="Пользователи"
            li.nav-item
              a.nav-link(href="/session/new")="Вход"
            li.nav-item
              a.nav-link(href="/users/new")="Регистрация"

    .container.mt-5
      h1.text-left="Создать статус"

      if messages && messages.error
        ul
          each error in messages.error
            li.text-danger= error
            
      form(method="post" action="/statuses/new")
        .form-floating.mb-3
        label.hidden(for="data_name")="Наименование"
        input#data_name.form-control(type="text" name="data[name]" placeholder="Наименование" required)
        button.btn.btn-primary(type="submit")="Создать"
    include ../partials/footer.pug