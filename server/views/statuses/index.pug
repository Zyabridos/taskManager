doctype html
html
  head
    title="Менеджер задач"
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/assets/styles/common.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href="/")="Менеджер задач"
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggleExternalContent")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.justify-content-end.w-100
            li.nav-item.me-auto
              a.nav-link.active(href="/users")="Пользователи"
            li.nav-item
              a.nav-link(href="/session/new")="Вход"
            li.nav-item
              a.nav-link(href="/users/new")="Регистрация"
    .container.wrapper.flex-grow-1
      h1.display-4.fw-bold.mt-4="Статусы"

      each messages, type in flashMessages || {}
        each message in messages
          div.alert(class=`alert-${type}`)= message

      form(action="/statuses" method="POST")
        button.btn.btn-primary(type="submit")="Создать статус"

      .table-responsive
        table.table.table-borderless.table-striped.mt-5.bg-white
          thead
            tr
              th="ID"
              th="Наименование"
              th="Дата создания"
          tbody
            if data.statuses && data.statuses.length > 0
              each status in data.statuses
                tr
                  td= status.id
                  td= status.name
                  td= user.created_at_local_time || 'N/A'
                  td
                    .d-flex.flex-wrap
                      a.btn.btn-primary.me-1(href=`/statuses/${status.id}/edit`)= 'Изменить'
                      form(action=`/statuses/${status.id}` method='POST')
                        input(type="hidden" name="_method" value="delete")
                        input.btn.btn-danger(type="submit" value="Удалить")
            else
              tr
                td(colspan="5").text-center= 'Нет статусов'