doctype html
html
  head
    title= views.mainPage.title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href="/")= views.mainPage.taskManager
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.justify-content-end.w-100
            li.nav-item.me-auto
              a.nav-link.active(href="/")= views.mainPage.users
            li.nav-item
              a.nav-link(href="/statuses")= views.mainPage.status
            li.nav-item
              a.nav-link(href="/labels")= views.mainPage.labels
            li.nav-item
              a.nav-link(href="/tasks")= views.mainPage.tasks
            li.nav-item
              form(action='/session', method='post')
                input(name='_method' type='hidden' value='delete')
                input.btn.nav-link(type='submit', value=views.mainPage.exit)
    .container.wrapper.flex-grow-1
      h1.display-4.fw-bold.mt-4
      .container
        .row
          .row-12
            .card.shadow.bg-white.rounded-3
              .card-body.p-5
                .display-4.fw-bold.mb-0= views.mainPage.welcomeCard.title
                p.lead= views.mainPage.welcomeCard.message
                .d-flex.gap-3 
                  a.btn.btn-primary.btn-lg.px-4.mt-3.fw-bold(href="https://github.com/Zyabridos/taskManager" target='_blank')= views.mainPage.welcomeCard.button
                  form(action='/change-language', method='POST')
                    input(type='hidden', name='language', value='en')
                    button.btn.btn-primary.btn-lg.px-4.mt-3.fw-bold(type='submit') Change language to English (work in progress)
