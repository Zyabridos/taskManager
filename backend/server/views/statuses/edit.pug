extends ../layouts/application.pug

block header
  h1= t('views.statuses.edit.title')

block content
  +formFor()(action=`/statuses/${status.id}` method='post')
    +floatingFormInput(status, 'name', errors, t('views.statuses.edit.label'))(type="text")
    input(name="_method" type="hidden" value="patch")
    +submit(status)(value=t('views.statuses.edit.submit'))